<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_03">

    <TextView
        android:id="@+id/categoryTitle"
        style="@style/black_bold_title_18_pt_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Chapter 1. 자기소개 관련 표현들" />

    <android.widget.Button
        android:id="@+id/exampleButton"
        style="@style/white_medium_title_14_pt_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/roundbox_purple_dark_20dp"
        android:text="예문 보기"
        app:layout_constraintTop_toBottomOf="@+id/categoryTitle"
        app:layout_constraintStart_toStartOf="parent" />

    <android.widget.Button
        android:id="@+id/questionButton"
        style="@style/white_medium_title_14_pt_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/roundbox_purple_20dp"
        android:text="문제 풀기"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/categoryTitle"
        app:layout_constraintStart_toEndOf="@+id/exampleButton" />

    <View
        android:id="@+id/bottomLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="16dp"
        android:background="@color/line_02"
        app:layout_constraintTop_toBottomOf="@+id/exampleButton" />

</androidx.constraintlayout.widget.ConstraintLayout>